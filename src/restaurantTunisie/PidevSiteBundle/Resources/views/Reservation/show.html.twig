{% extends "PidevSiteBundle:Default:layout.html.twig" %}
{%block content%}
    <h1>Reservation</h1>

    <img style="vertical-align:top;" src="{{asset('bundles/PidevSite/img/restaurant.png')}}"/>
    <div style="display:inline-block;">
    <table class="record_properties" style=" display: inline-block; margin-left: 10px; ">
        <tbody>
           
            <tr>
                <th>Date</th>
                <td>{{ entity.date }}</td>
            </tr>
            <tr>
                <th>Idclient</th>
                <td>{{ entity.idClient }}</td>
            </tr>
            <tr>
                <th>Idrestaurant</th>
                <td>{{ entity.idRestaurant }}</td>
            </tr>
            <tr>
                <th>Idrestaurateur</th>
                <td>{{ entity.idRestaurateur }}</td>
            </tr>
        </tbody>
    </table>
            <br />
        <ul class="record_actions" style=" width: 140px; display: inline-block;margin-top: 50px; ">
    <li>
        <a href="{{ path('reservation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reservation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
            </div>
    <div></div>
    <br /><br /><br />
{% endblock %}

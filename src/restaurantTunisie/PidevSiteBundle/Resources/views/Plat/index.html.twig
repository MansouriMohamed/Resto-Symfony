{% extends "PidevSiteBundle:Default:layout.html.twig" %}
{%block content%}
    <h1>Plat list</h1>

    <table class="records_list">
        <thead>
            <tr>
                
                <th>Nomplat</th>
                <th>Descriptionplat</th>
                <th>Prixplat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('plat_show', { 'id': entity.id }) }}"></a></td>
                
                <td>{{ entity.nomPlat }}</td>
                <td>{{ entity.descriptionPlat }}</td>
                <td>{{ entity.prixPlat }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('plat_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('plat_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('plat_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

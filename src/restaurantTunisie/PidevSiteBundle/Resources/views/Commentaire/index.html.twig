{% extends "PidevSiteBundle:Default:layout.html.twig" %}
{%block content%}
    <h1>Commentaire list</h1>

    <table class="records_list">
        <thead>
            <tr>
                
                <th>Contenu</th>
                <th>Date</th>
               
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('commentaire_show', { 'id': entity.id }) }}"></a></td>
                <td>{{ entity.contenu }}</td>
                <td>{{ entity.date }}</td>
                
                <td>
                <ul>
                    <li>
                        <a href="{{ path('commentaire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('commentaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('commentaire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

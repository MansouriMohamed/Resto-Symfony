{% extends "PidevSiteBundle:Default:layout.html.twig" %}
{%block content%}
    <h1>Restaurant</h1>
    <img style="vertical-align:top;" src="{{asset('bundles/PidevSite/img/restaurant.png')}}"/>
    <div style="display:inline-block;">
    <table class="record_properties" style=" display: inline-block; margin-left: 10px; ">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>
                    {{ entity.adresse }}
                    <input type="hidden" value="{{ entity.adresse }}" id="destination" />
                    <div qtyle="display:none;" is="panel"></div>
                </td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ entity.numero }}</td>
            </tr>
            
        </tbody>
    </table>
        <br />
        <ul class="record_actions" style=" width: 140px; display: inline-block;margin-top: 50px; ">
    <li>
        <a href="{{ path('restaurant') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('restaurant_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
        </div>
    <div></div>
    <br /><br /><br />
    
<script src="{{ asset ('Bundles/PidevSite/js/functions.js')}}"></script>
{% endblock %}
